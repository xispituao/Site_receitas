<div class="jumbotron jumbotron-fluid">
<div class="container">
  <%- model_class = Publication -%>
  <div class="page-header">
    <h1 class="display-4"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:image) %></th>
        <th><%= model_class.human_attribute_name(:preparation) %></th>
        <th><%= model_class.human_attribute_name(:user) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @publications.each do |publication| %>
        <tr>
          <td><%= link_to publication.id, publication_path(publication) %></td>
          <td><%= publication.description %></td>
          <td><%= publication.image %></td>
          <td><%= publication.preparation %></td>
          <td><%= publication.user %></td>
          <td><%=l publication.created_at %></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        publication_path(publication), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_publication_path(publication), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        publication_path(publication),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_publication_path,
              :class => 'btn btn-primary' %>
</div>
</div>